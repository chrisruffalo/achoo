		<!-- io and other common utilities -->
		<dependency>
		    <groupId>com.google.guava</groupId>
		    <artifactId>guava</artifactId>
		    <version>13.0-rc2</version>
		</dependency>
		<!-- fast http send support -->
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
