        </dependency>        
	  	<!-- command line parsing -->
	  	<dependency>
			<groupId>com.beust</groupId>
			<artifactId>jcommander</artifactId>
			<version>1.27</version>
		</dependency>
		<!-- mime stuff for tjws to prevent mime types not found -->
